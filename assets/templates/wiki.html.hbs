<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>

    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/skeleton.css">
  </head>
  <body>
    <div class="container">
      {{#if flash}}
        <div class="row">
          <p>{{flash}}</p>
        </div>
      {{/if}}

      <div class="row">
        {{{body}}}
      </div>

      <div class="row">
        {{#if current_username}}
          <form action="/images/delete/{{slug}}", method="post">
            <a href="/">Home</a>

            <a href="/pages/history/{{slug}}">History</a>

            <a href="/e/{{slug}}">Edit</a>

            <input type="submit" value="Delete" />
          </form>
        {{else}}
          <a href="/">Home</a>

          <a href="/pages/history/{{slug}}">History</a>
        {{/if}}
      </div>
    </div>
  </body>
</html>
